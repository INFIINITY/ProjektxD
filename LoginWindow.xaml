<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Logowanie" Height="350" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Formularz logowania" FontSize="20" FontWeight="Bold" Margin="5"/>
            <Label Content="Nazwa Użytkownika:" Margin="5"/>
            <TextBox Name="LoginTextBox" Margin="5"/>
            <Label Content="Hasło:" Margin="5"/>
            <PasswordBox Name="PasswordBoxLogin" Margin="5"/>
            <Button Content="Zaloguj" Click="LoginButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
